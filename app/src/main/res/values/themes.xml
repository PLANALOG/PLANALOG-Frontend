<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PLANALOG" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PLANALOG" parent="Base.Theme.PLANALOG" />

    <style name="FullStatusTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/main_2</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>




    <style name="Theme.PLANALOG.RemoveSplash" parent="Base.Theme.PLANALOG">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashStatusTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/main_1</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>