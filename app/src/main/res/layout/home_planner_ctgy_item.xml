<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1.5dp"
    android:layout_marginBottom="1.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/home_ctgy_et"
        android:layout_width="wrap_content"
        android:minWidth="58dp"
        android:layout_height="22dp"
        android:hint="@string/ctgy_text"
        android:textColorHint="@color/state_1"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/edge_round_ctgy"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/home_planner_ctgy_plus_ic"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_plus"
        android:layout_marginStart="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/home_ctgy_et"
        app:layout_constraintTop_toTopOf="@id/home_ctgy_et"
        app:layout_constraintBottom_toBottomOf="@id/home_ctgy_et"/>

    <ImageView
        android:id="@+id/home_planner_ctgy_select_btn"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_ctgy_et"
        app:layout_constraintBottom_toBottomOf="@id/home_ctgy_et"
        android:src="@drawable/ic_ctgy_delete_unselected"/>

    <LinearLayout
        android:id="@+id/home_planner_ctgy_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_ctgy_et"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>