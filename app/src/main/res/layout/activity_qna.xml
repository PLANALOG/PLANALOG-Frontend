<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_1">

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:src="@drawable/ic_logo"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="54dp"/>


    <!-- '소셜 로그인' 텍스트 -->
    <TextView
        android:id="@+id/planalog_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="@string/ready"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo" />

    <TextView
        android:id="@+id/qna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="@string/ready"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/planalog_ready" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/qna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvOption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. 전체적인 공부 계획을 세운다."
        android:gravity="center"
        android:textSize="15sp"
        android:padding="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        />

    <TextView
        android:id="@+id/tvOption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2. 각 과목별로 공부 계획을 세운다."
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="28dp"
        android:padding="18dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOption1"
        />

    <TextView
        android:id="@+id/tvFollowUpQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이제 PPT를 만들어볼까?\n아자아자 파이팅!"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="26sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvOption2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvFollowUpOption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="1. 아이디어가 떠오르면 먼저 작성해본다."
        android:textSize="15sp"
        android:padding="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/btn_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFollowUpQuestion"
        android:layout_marginTop="28dp"
        />

    <TextView
        android:id="@+id/tvFollowUpOption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="2. 초안을 시작으로 단계별로 만든다."
        android:textSize="15sp"
        android:padding="8dp"
        android:background="@drawable/btn_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFollowUpOption1"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/tvFollowUpQuestion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 정말 말도 안 되는 하루를 보냈다!\n이런 건 좀 적어둬야겠어."
        android:visibility="gone"
        android:textSize="26sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvFollowUpOption2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvFollow2UpOption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="1. 오늘 일어난 일들을 생각나는 대로 적는다."
        android:textSize="15sp"
        android:padding="8dp"
        android:background="@drawable/btn_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFollowUpQuestion2"
        android:layout_marginTop="28dp"
        />

    <TextView
        android:id="@+id/tvFollow2UpOption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="2. 오늘 일어난 일들을 시간 순으로 정리한다."
        android:textSize="15sp"
        android:padding="8dp"
        android:background="@drawable/btn_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFollow2UpOption1"
        android:layout_marginTop="28dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>