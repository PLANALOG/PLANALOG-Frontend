<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/home_planner_memo_cb"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:button="@null"
        android:background="@drawable/checkbox_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/home_planner_memo_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="@string/planner_memo_ex_1"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:background="@color/transparent"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toEndOf="@id/home_planner_memo_cb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/home_planner_memo_select_btn"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_planner_memo_et"
        app:layout_constraintBottom_toBottomOf="@id/home_planner_memo_et"
        android:src="@drawable/ic_ctgy_delete_unselected"/>

</androidx.constraintlayout.widget.ConstraintLayout>